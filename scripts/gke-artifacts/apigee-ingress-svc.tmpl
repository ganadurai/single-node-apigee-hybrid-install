apiVersion: v1
kind: Service
metadata:
  name: $SERVICE_NAME
  namespace: apigee
  spec:
    ports:
    - name: status-port
      port: 15021
      protocol: TCP
      targetPort: 15021
    - name: https
      port: 443
      protocol: TCP
      targetPort: 8443
    selector:
      app: apigee-ingressgateway #required
      ingress_name: $ENV_GROUP_INGRESS
      org: $ORG_NAME
    type: LoadBalancer

